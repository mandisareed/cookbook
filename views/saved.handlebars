<h1>Saved Recipes</h1>


<ul>
  {{#each recipes}}
  	<li>
  	   <p>{{this.id}} {{this.recipe}}
            <button recipe-recipeid="{{this.id}}" class="delete-recipe">Delete</button>

         </p>
  	</li>
  {{/each}}
</ul>

<script type="text/javascript">
  $(".delete-recipe").on("click", function(event) {
    // Get the ID from the button.
    // This is shorthand for $(this).attr("")
    var id = $(this).data("recipeid");

    // Send the DELETE request.
    //what goes in between the forward slashes: recipe? saved?
    $.ajax("/api//" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });