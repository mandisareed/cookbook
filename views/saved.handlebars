<div class="container">
  <div class="row mt-2">
    <div class="col-md-6 col-md-offset-3">
      <div class="input-group mb-3">
        <input id='searchInput' type="text" class="form-control" placeholder="Search Recipes" aria-label="Search Recipes">
        <div class="input-group-append">
          <button class="btn input-group-text searchBtn" id="basic-addon2"><i class="fa fa-search"></i></button>
        </div>
      </div>
    </div>
